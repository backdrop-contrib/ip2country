 ******************************************************************************/


/**
 * AJAX callback to update the IP to Country database.
 *
 * @param $arg
 *   String with name of IP registry
 *
 * @return
 *   JSON object for display by jQuery script
 */
function _uc_ip2country_update($arg) {

  uc_ip2country_update_database($arg);
  if (variable_get('uc_ip2country_watchdog', 1)) {
    watchdog('uc_ip2country', t('Database updated'), WATCHDOG_NOTICE);
  }
  print drupal_to_js(array(
    'count'   => t('@rows rows affected.',
                    array('@rows' => uc_ip2country_get_count())),
    'server'  => $arg,
    'message' => t('The IP to Country database has been updated.  '),
  ));
  exit();
}


/**
 * Default IP to Country administration settings.
