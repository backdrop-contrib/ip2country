  drupal_add_css(drupal_get_path('module', 'uc_ip2country') .'/uc_ip2country.css');

  /* Container for database update preference forms */
  $form['uc_ip2country_database_update'] = array(
    '#type'         => 'fieldset',
    '#title'        => t('Database Updates'),
    '#collapsible'  => FALSE,
    '#collapsed'    => FALSE,
  );

  /* Form to enable watchdog logging of updates */
  $form['uc_ip2country_database_update']['uc_ip2country_watchdog'] = array(
    '#type'          => 'checkbox',
    '#title'         => t('Log database updates to watchdog'),
    '#default_value' => variable_get('uc_ip2country_watchdog', 1),
  );

  $period = drupal_map_assoc(array(86400, 302400, 604800, 1209600, 2419200), 'format_interval');

  /* Form to set automatic update interval */
  $form['uc_ip2country_database_update']['uc_ip2country_update_interval'] = array(
    '#type'          => 'select',
    '#title'         => t('Database update frequency'),
    '#default_value' => variable_get('uc_ip2country_update_interval', 604800),
    '#options'       => $period,
    '#description'   => t('Database will be automatically updated via cron.php.  Cron must be enabled for this to work.  Default period is 1 week (604800 seconds).'),
  );

  $update_time = variable_get('uc_ip2country_last_update', 0);

  /* Form for manual updating of the IP-Country database */
  $form['uc_ip2country_database_update']['uc_ip2country_update_database'] = array(
    '#type'         => 'button',
    '#value'        => t('Update'),
    '#prefix'       => '<div>'. t('The IP to Country Database may be updated manually by pressing the Update button below.  Note, this may take several minutes.') .'</div>',
    '#suffix'       => '<span id="dbthrobber" class="message">Database last updated on '. date('n/j/Y', $update_time) .' at '. date('H:i:s T', $update_time) .'</span>',
  );

  /* Container for debugging preference forms */
  $form['uc_ip2country_debug_preferences'] = array(
    '#type'        => 'fieldset',
    '#title'       => t('Debug Preferences'),
    '#description' => t('Set debugging values'),
    '#collapsible' => FALSE,
    '#collapsed'   => FALSE,
  );

  /* Form to turn on debugging */
  $form['uc_ip2country_debug_preferences']['uc_ip2country_debug'] = array(
    '#type'          => 'checkbox',
    '#title'         => t('Admin Debug'),
    '#default_value' => variable_get('uc_ip2country_debug', FALSE),
    '#description'   => t('Allows admin to specify an IP Address or Country to use for location-based currency.'),
  );

  /* Form to select Dummy Country or Dummy IP Address for testing */
  $form['uc_ip2country_debug_preferences']['uc_ip2country_test_type'] = array(
    '#type'          => 'radios',
    '#title'         => t('Bypass IP/Country check for administrator and manually enter'),
    '#default_value' => variable_get('uc_ip2country_test_type', 0),
    '#options'       => array(t('Country'), t('IP Address')),
  );

  $dd = variable_get('uc_ip2country_test_country', uc_ip2country_get_country($_SERVER['REMOTE_ADDR']));
  $form['uc_ip2country_debug_preferences']['uc_ip2country_test_country'] = uc_country_select(t('Dummy Country to use for testing'), $dd, NULL, 'name', FALSE);

  $form['uc_ip2country_debug_preferences']['uc_ip2country_test_ip_address'] = array(
    '#type'          => 'textfield',
    '#title'         => t('Dummy IP to use for testing'),
    '#default_value' => variable_get('uc_ip2country_test_ip_address', $_SERVER['REMOTE_ADDR']),
  );

  return system_settings_form($form);
}


/**
 * Process Forms submitted by IP to Country administration page
 */
function uc_ip2country_admin_settings_submit($form_id, $form_values) {
  global $user;

  // Check to see if debug set
  if ($form_values['uc_ip2country_debug']) {
    // Debug on
    if ($form_values['uc_ip2country_test_type']) {
      // Dummy IP Address
      $ip = $form_values['uc_ip2country_test_ip_address'];
      $country_code = uc_ip2country_get_country($ip);
    }
    else {
      // Dummy Country
      $country_code = db_result(db_query("SELECT country_iso_code_2 FROM {uc_countries} WHERE country_id = %d", $form_values['uc_ip2country_test_country']));
    }
    drupal_set_message("Using DEBUG value for Country - ". $country_code);
  }
  else {
    // Debug off - make sure we set/reset IP/Country to their real values
    $ip = $_SERVER['REMOTE_ADDR'];
    $country_code = uc_ip2country_get_country($ip);
    drupal_set_message("Using ACTUAL value for Country - ". $country_code);
  }

  // Finally, save country, if it has been determined
  if ($country_code) {
    // Store the ISO country code in the $user object
    user_save($user, array('country_iso_code_2' => $country_code));
  }

  system_settings_form_submit($form_id, $form_values);
}


/******************************************************************************
 * Module Functions                                                           *
 ******************************************************************************/


/**
 * Get the Country Code from the IP address
 *
 * @return
 *   FALSE if the lookup failed to find a country for this IP
 */
function uc_ip2country_get_country($ip_address) {
  $ipl = ip2long($ip_address);
  if (is_long($ip_address)) {
    $ipl = ip_address;
  }

  // Locate IP within ranges
  $sql    = "SELECT country FROM {uc_ip2country}
             WHERE (%d >= `ip_range_first` AND %d <= `ip_range_last`) LIMIT 1";
  $result = db_result(db_query($sql, $ipl, $ipl));

  return $result;
}


/**
 * Get the total count of IP ranges in database
 */
function uc_ip2country_get_count() {
  $sql   = "SELECT COUNT(*) FROM {uc_ip2country}";
  $count = db_result(db_query($sql));
  return (int) $count;
}
